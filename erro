from fastmcp import MultiServerMCPClient

# Point this to your running AnsiblePlus MCP server
client = MultiServerMCPClient(
    servers=["http://localhost:8080"]  # Change to deployed URL if not local
)

# Stub to call AnsiblePlus RAG Tool
async def ansibleplus_rag_stub(context: str, question: str, session_id: str):
    result = await client.query_ansibleplus_rag(
        context=context,
        question=question,
        session_id=session_id
    )
    return result
